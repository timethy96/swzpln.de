# City Plan Generator Environment Configuration

# Application Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Domain Configuration (for language detection)
PRIMARY_DOMAIN=swzpln.de
ENGLISH_DOMAIN=opencityplans.com

# API Configuration
OVERPASS_API_URL=https://overpass.private.coffee/api/interpreter
OVERPASS_FALLBACK_URL=https://overpass-api.de/api/interpreter

# Height Data API Configuration
# Using Open Topo Data (free tier)
HEIGHT_API_URL=https://api.opentopodata.org/v1/mapzen
HEIGHT_API_KEY=
HEIGHT_API_RATE_LIMIT=100

# Alternative height data providers:
# MAPBOX_ACCESS_TOKEN=your_mapbox_token
# GOOGLE_ELEVATION_API_KEY=your_google_api_key

# Database Configuration (if using database for analytics)
# DATABASE_URL=postgresql://user:password@localhost:5432/cityplans
# REDIS_URL=redis://localhost:6379

# Analytics Configuration
ENABLE_ANALYTICS=true
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Error Reporting
SENTRY_DSN=
ENABLE_ERROR_REPORTING=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://swzpln.de,https://opencityplans.com
ALLOWED_HOSTS=swzpln.de,opencityplans.com

# Security
TRUSTED_PROXIES=

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600

# Development
DEBUG=false
LOG_LEVEL=info